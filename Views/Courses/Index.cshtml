@model List<CourseViewModel>

<h1>Catalogo dei corsi</h1>

@foreach(CourseViewModel course in Model) 
{
    <hr>
    <div class="row course">
        <div class="col-md-1">
            <img src = "@course.ImagePath" alt="Immagine corso" width="50">
        </div>
        <div class="col-md-5">
            <h2>@course.Titolo</h2>
            <author>di @course.Author</author>
        </div>
        <div class="col-md-2 rating">
            @if (@course.Rating <= 1) 
            {
                <i class="fas fa-star"></i>                
            }
            else if (@course.Rating > 1 && @course.Rating <= 2)
            {
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>                 
            }
            else if (@course.Rating >2 && @course.Rating < 3)
            {
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>                 
                <i class="fas fa-star"></i>                 
            }
            else if (@course.Rating >3 && @course.Rating <= 4)
            {
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>                 
                <i class="fas fa-star"></i>                 
                <i class="fas fa-star"></i>                 
            }
            else if (@course.Rating >4 && @course.Rating <= 5)
            {
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>                 
                <i class="fas fa-star"></i>                 
                <i class="fas fa-star"></i>                 
                <i class="fas fa-star"></i>                 
            }
        </div>
        <div class="col-md-2 price">
            <h2>@course.CurrentPrice.Currency @course.CurrentPrice.Price</h2>
            <s>@course.CurrentPrice.Currency @course.FullPrice.Price</s>        
        </div>
        <div class="col-md-2 d-flex align-items-center">
            <a class="btn btn-outline-primary" asp-action="Detail" asp-controller="Courses">Dettaglio corso</a>   
        </div>
    </div>
}


